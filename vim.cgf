"INITIAL CONFIG"
set rtp+=$HOME/.vim/bundle/Vundle.vim
set rtp+=$HOME/.vim/bundle/fzf
set number
set nocompatible
set tabstop=2
set shiftwidth=2
set expandtab
set showmatch
set t_Co=256
set laststatus=2
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoread | au CursorHold * checktime | call feedkeys("lh")
set wildignore+=*.swp
set mouse=a
set clipboard=unnamedplus
set timeoutlen=1000
set ttimeoutlen=0

syntax enable
"colorscheme monokai"
"colorscheme xcodedark"
"colorscheme xcodedarkhc"
"colorscheme xcodelight"
"colorscheme xcodelighthc"
"colorscheme xcodewwdc"
filetype off
filetype plugin indent on

