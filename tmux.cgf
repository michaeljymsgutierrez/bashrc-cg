# TMUX IMPORTS
source ~/bashrc-cg/tmux-colors/cg-theme.tmux

# TMUX CONFIG AND BINDINGS
set -g prefix `
setw -g mode-keys vi
bind-key ` send-prefix
bind-key C-S source-file ~/.tmux.conf\; display-message "Tmux was reloaded!"

bind v copy-mode

bind-key p paste-buffer
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection

bind-key C-T new-window -a -c "#{pane_current_path}"
bind-key | split-window -h -c "#{pane_current_path}"
bind-key _ split-window -v -c "#{pane_current_path}"

bind-key -r C-Left previous-window
bind-key -r C-Right next-window
bind-key / copy-mode

bind-key -r C-M-Left resize-pane -L 5
bind-key -r C-M-Right resize-pane -R 5
bind-key -r C-M-Up resize-pane -U 5
bind-key -r C-M-Down resize-pane -D 5
