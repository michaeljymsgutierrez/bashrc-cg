 
# POWERLINE CUSTOM CONFIG
function _update_ps1() {
    # PS1=$(powerline-shell $?)
    # echo $(powerline-shell $?)
    PS1="\[\e[38;5;0m\]\[\e[48;5;148m\] exec \[\e[48;5;236m\]\[\e[38;5;148m\]\[\e[38;5;15m\]\[\e[48;5;237m\] \$ \[\e[0m\]\[\e[38;5;237m\]\[\e[0m\]"
}
 
if [[ $TERM != linux && ! $PROMPT_COMMAND =~ _update_ps1 ]]; then
     PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi
